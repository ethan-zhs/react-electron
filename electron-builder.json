{
    "productName": "electron-test",
    "appId": "com.electrondemo.app",
    "copyright": "Copyright Â© 2020 zhuhuishao",
    "asar": true,
    "compression": "maximum",
    "electronDownload": {
        "mirror": "https://npm.taobao.org/mirrors/electron/"
    },
    "directories": {
        "output": "build"
    },
    "nsis": {
        "oneClick": false,
        "perMachine": true,
        "allowElevation": true,
        "allowToChangeInstallationDirectory": true
    },
    "dmg": {
        "contents": [
            {
                "x": 410,
                "y": 150,
                "type": "link",
                "path": "/Applications"
            },
            {
                "x": 130,
                "y": 150,
                "type": "file"
            }
        ]
    },
    "mac": {
        "icon": "public/icon.png",
        "target": ["dmg","zip"]
    },
    "win": {
        "icon": "public/icon.png",
        "target": ["nsis", "zip"]
    }
}